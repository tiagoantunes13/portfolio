<div class="min-h-screen bg-gray-50 py-12">
  <div class="container mx-auto px-6 max-w-4xl">
    <!-- Page Header -->
    <div class="mb-8 card sm:p-8">
      <div class="flex items-center gap-4 sm:gap-8">
        <div class="w-16 h-16 sm:w-20 sm:h-20 bg-indigo-600 rounded-3xl flex items-center justify-center flex-shrink-0">
          <svg class="w-10 h-10 sm:w-12 sm:h-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
          </svg>
        </div>
        <div>
          <h1 class="text-2xl sm:text-3xl lg:text-4xl font-bold text-gray-900">Account Settings</h1>
          <p class="text-sm sm:text-base text-gray-600 mt-1 sm:mt-2">Manage your subscription and account details</p>
        </div>
      </div>
    </div>

    <!-- Account Information Card -->
    <div class="bg-white rounded-lg shadow-sm p-4 sm:p-6 mb-6">
      <h2 class="text-lg sm:text-xl font-semibold text-gray-900 mb-4">Account Information</h2>

      <div class="space-y-3">
        <div class="flex justify-between py-2 border-b border-gray-100">
          <span class="text-gray-600 font-medium">Name:</span>
          <span class="text-gray-900"><%= current_user.name || 'Not set' %></span>
        </div>

        <div class="flex justify-between py-2 border-b border-gray-100">
          <span class="text-gray-600 font-medium">Email:</span>
          <span class="text-gray-900"><%= current_user.email %></span>
        </div>

        <div class="flex justify-between py-2">
          <span class="text-gray-600 font-medium">Member since:</span>
          <span class="text-gray-900"><%= current_user.created_at.strftime('%B %d, %Y') %></span>
        </div>
      </div>
    </div>

    <!-- Account Credentials Card -->
    <div class="bg-white rounded-lg shadow-sm p-4 sm:p-6 mb-6">
      <div class="flex flex-col sm:flex-row items-start sm:items-center justify-between gap-3 sm:gap-0">
        <div class="flex-1">
          <h2 class="text-lg sm:text-xl font-semibold text-gray-900 mb-2">Account Credentials</h2>
          <p class="text-gray-600 text-sm">Manage your email, password, and account security</p>
        </div>
        <%= link_to edit_user_registration_path, class: "text-indigo-600 hover:text-indigo-700 font-medium flex items-center gap-2" do %>
          <span>Edit Credentials</span>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        <% end %>
      </div>

      <div class="mt-4 pt-4 border-t border-gray-100">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <div class="flex items-center gap-3">
            <div class="flex-shrink-0 w-10 h-10 bg-indigo-100 rounded-full flex items-center justify-center">
              <svg class="w-5 h-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
            </div>
            <div>
              <p class="text-sm font-medium text-gray-900">Email</p>
              <p class="text-xs text-gray-500">Change email address</p>
            </div>
          </div>

          <div class="flex items-center gap-3">
            <div class="flex-shrink-0 w-10 h-10 bg-green-100 rounded-full flex items-center justify-center">
              <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
              </svg>
            </div>
            <div>
              <p class="text-sm font-medium text-gray-900">Password</p>
              <p class="text-xs text-gray-500">Update password</p>
            </div>
          </div>

          <div class="flex items-center gap-3">
            <div class="flex-shrink-0 w-10 h-10 bg-red-100 rounded-full flex items-center justify-center">
              <svg class="w-5 h-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
              </svg>
            </div>
            <div>
              <p class="text-sm font-medium text-gray-900">Delete Account</p>
              <p class="text-xs text-gray-500">Permanently delete</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Subscription Card -->
    <div class="bg-white rounded-lg shadow-sm p-4 sm:p-6">
      <h2 class="text-lg sm:text-xl font-semibold text-gray-900 mb-4">Subscription</h2>

      <% if current_user.subscribed? %>
        <!-- Pro Plan State -->
        <div class="mb-6">
          <div class="bg-gradient-to-r from-green-50 to-indigo-50 border border-green-200 rounded-lg p-6">
            <div class="flex items-center justify-between mb-4">
              <div>
                <h3 class="text-lg font-semibold text-gray-900 flex items-center gap-2">
                  Pro Plan
                  <span class="text-green-600">✓</span>
                </h3>
                <p class="text-gray-600 text-sm mt-1">€3/month</p>
              </div>
              <span class="badge-success">
                Active
              </span>
            </div>

            <div class="bg-white rounded-lg p-4 mb-4">
              <h4 class="font-semibold text-gray-900 mb-3">Your Pro Benefits</h4>
              <ul class="space-y-2 text-sm text-gray-700">
                <li class="flex items-center">
                  <svg class="w-4 h-4 mr-2 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                  <span>Unlimited AI cover letters</span>
                </li>
                <li class="flex items-center">
                  <svg class="w-4 h-4 mr-2 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                  <span>Unlimited location checks</span>
                </li>
                <li class="flex items-center">
                  <svg class="w-4 h-4 mr-2 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                  <span>Unlimited AI CV imports</span>
                </li>
                <li class="flex items-center">
                  <svg class="w-4 h-4 mr-2 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                  <span>Job search access</span>
                </li>
                <li class="flex items-center">
                  <svg class="w-4 h-4 mr-2 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                  <span>LinkedIn job import</span>
                </li>
                <li class="flex items-center">
                  <svg class="w-4 h-4 mr-2 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                  <span>Save unlimited jobs</span>
                </li>
                <li class="flex items-center">
                  <svg class="w-4 h-4 mr-2 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                  <span>Unlimited AI Chat</span>
                </li>
              </ul>
            </div>

            <% if current_user.subscription %>
              <div class="space-y-2 text-sm mb-4">
                <% if current_user.subscription.on_grace_period? %>
                  <!-- Canceled but still has access until end of period -->
                  <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-3 mb-3">
                    <p class="text-yellow-800 font-medium text-sm">
                      ⚠️ Subscription canceled - Access until <%= current_user.subscription.ends_at&.strftime('%B %d, %Y') || 'N/A' %>
                    </p>
                  </div>
                <% else %>
                  <!-- Active subscription -->
                  <div class="flex justify-between">
                    <span class="text-gray-700">Next billing date:</span>
                    <span class="text-gray-900 font-semibold">
                      <%= current_user.subscription.current_period_end&.strftime('%B %d, %Y') || 'Pending' %>
                    </span>
                  </div>
                <% end %>
              </div>
            <% end %>

            <%= button_to "Manage Subscription", billing_portal_path,
                          class: "bg-indigo-600 text-white px-4 py-2 rounded-lg font-medium hover:bg-indigo-700 transition-colors cursor-pointer",
                          data: { turbo: false } %>
            <p class="text-xs text-gray-600 mt-2">
              <% if current_user.subscription&.on_grace_period? %>
                Reactivate subscription, update payment method, or view invoices
              <% else %>
                Update payment method, view invoices, or cancel subscription
              <% end %>
            </p>
          </div>
        </div>

      <% else %>
        <!-- Free Plan State -->
        <div class="mb-6">
          <div class="flex items-center justify-between mb-4">
            <div>
              <h3 class="text-lg font-semibold text-gray-900">Current Plan: Free</h3>
              <p class="text-gray-600 text-sm mt-1">$0/month</p>
            </div>
            <span class="px-3 py-1 bg-gray-100 text-gray-700 rounded-full text-sm font-medium">
              Active
            </span>
          </div>



          <!-- Upgrade CTA -->
          <div class="bg-gradient-to-r from-indigo-600 to-indigo-700 rounded-lg p-6 text-white">
            <div class="flex items-start justify-between">
              <div class="flex-1">
                <h3 class="text-xl font-bold mb-2">Upgrade to Pro</h3>
                <p class="text-indigo-100 mb-4">Unlock unlimited access to all features</p>

                <ul class="space-y-2 mb-6">
                  <% PricingConfig.feature_list(:monthly).each do |feature| %>
                    <li class="flex items-center">
                      <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                      </svg>
                      <span><%= feature %></span>
                    </li>
                  <% end %>
                </ul>

                <div class="space-y-3">
                  <% monthly = @plans[:monthly] %>
                  <%= button_to checkout_path,
                      params: { interval: 'monthly' },
                      class: "w-full bg-white text-indigo-600 px-6 py-3 rounded-lg font-semibold hover:bg-indigo-50 transition-colors cursor-pointer text-center",
                      data: { turbo: false } do %>
                    <span class="block"><%= monthly[:display_name] %></span>
                    <span class="block text-sm font-normal text-indigo-500"><%= PricingConfig.display_price(:monthly) %></span>
                  <% end %>

                  <% annual = @plans[:annual] %>
                  <%= button_to checkout_path,
                      params: { interval: 'annual' },
                      class: "w-full bg-white text-indigo-600 px-6 py-3 rounded-lg font-semibold hover:bg-indigo-50 transition-colors cursor-pointer text-center border-2 border-yellow-400 relative",
                      data: { turbo: false } do %>
                    <span class="absolute -top-2 -right-2 bg-yellow-400 text-yellow-900 text-xs font-bold px-2 py-1 rounded-full">Save <%= annual[:savings][:percent] %>%</span>
                    <span class="block"><%= annual[:display_name] %></span>
                    <span class="block text-sm font-normal text-indigo-500"><%= PricingConfig.display_price(:annual) %></span>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
