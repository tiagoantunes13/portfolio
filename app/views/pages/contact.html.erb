<div class="py-8 sm:py-12">
  <!-- Header Section -->
  <div class="flex flex-col gap-4 sm:gap-6 p-4 text-center mb-8 sm:mb-12">
    <h1 class="text-gray-900 dark:text-white text-2xl sm:text-3xl md:text-4xl font-bold leading-tight">
      Let's Work Together
    </h1>
    <p class="text-gray-600 dark:text-gray-300 text-base sm:text-lg max-w-2xl mx-auto">
      Interested in collaborating on a project or discussing opportunities? I'm always open to exploring new challenges and partnerships.
    </p>
  </div>

  <!-- Contact Form -->
  <div class="max-w-2xl mx-auto px-4">
    <div id="contact_form">
      <%= form_with model: @contact_message, class: "flex flex-col gap-6" do |f| %>
        <% if @contact_message.errors.any? %>
          <div class="flex p-6 bg-red-100 dark:bg-red-900/20 border border-red-300 dark:border-red-500/30 rounded-xl">
            <div class="flex flex-col gap-2">
              <h4 class="text-red-700 dark:text-red-400 font-semibold text-lg">Please fix the following errors:</h4>
              <ul class="text-red-600 dark:text-red-300 text-base space-y-1">
                <% @contact_message.errors.full_messages.each do |message| %>
                  <li class="flex items-center gap-2">
                    <svg class="w-4 h-4 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                    </svg>
                    <%= message %>
                  </li>
                <% end %>
              </ul>
            </div>
          </div>
        <% end %>

        <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
          <div class="flex flex-col gap-3">
            <%= f.label :name, class: "text-gray-900 dark:text-white text-base font-semibold" %>
            <%= f.text_field :name, class: "w-full px-4 py-3 rounded-lg text-gray-900 dark:text-white bg-white dark:bg-[#152331] border border-gray-300 dark:border-gray-700 focus:border-primary focus:ring-2 focus:ring-primary/20 transition-all duration-300 placeholder-gray-400 dark:placeholder-gray-500", placeholder: "Your name" %>
          </div>

          <div class="flex flex-col gap-3">
            <%= f.label :email, class: "text-gray-900 dark:text-white text-base font-semibold" %>
            <%= f.email_field :email, class: "w-full px-4 py-3 rounded-lg text-gray-900 dark:text-white bg-white dark:bg-[#152331] border border-gray-300 dark:border-gray-700 focus:border-primary focus:ring-2 focus:ring-primary/20 transition-all duration-300 placeholder-gray-400 dark:placeholder-gray-500", placeholder: "your.email@example.com" %>
          </div>
        </div>

        <div class="flex flex-col gap-3">
          <%= f.label :subject, class: "text-gray-900 dark:text-white text-base font-semibold" %>
          <%= f.text_field :subject, class: "w-full px-4 py-3 rounded-lg text-gray-900 dark:text-white bg-white dark:bg-[#152331] border border-gray-300 dark:border-gray-700 focus:border-primary focus:ring-2 focus:ring-primary/20 transition-all duration-300 placeholder-gray-400 dark:placeholder-gray-500", placeholder: "What's this about?" %>
        </div>

        <div class="flex flex-col gap-3">
          <%= f.label :message, class: "text-gray-900 dark:text-white text-base font-semibold" %>
          <%= f.text_area :message, rows: 6, class: "w-full px-4 py-3 rounded-lg text-gray-900 dark:text-white bg-white dark:bg-[#152331] border border-gray-300 dark:border-gray-700 focus:border-primary focus:ring-2 focus:ring-primary/20 transition-all duration-300 placeholder-gray-400 dark:placeholder-gray-500 resize-none", placeholder: "Tell me about your project or question..." %>
        </div>

        <div class="flex justify-start">
          <%= f.submit "Send Message", class: "flex h-12 min-w-[120px] cursor-pointer items-center justify-center overflow-hidden rounded-lg bg-primary px-6 text-base font-bold leading-normal tracking-[0.015em] text-white transition-colors hover:bg-primary/90" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
