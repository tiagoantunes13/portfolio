<footer class="px-4 sm:px-8 md:px-20 lg:px-40 py-8">
  <div class="border-t border-primary/20 pt-6">
    <div class="flex items-center gap-2 font-mono text-sm text-primary">
      <span>user@portfolio:~$</span>
      <span class="text-white">get-in-touch</span>
      <span class="blinking-cursor bg-primary w-2 h-4"></span>
    </div>
    <div class="flex flex-wrap gap-x-6 gap-y-2 mt-4">
      <%= link_to "[ cv ]", "/cv.pdf", target: "_blank", class: "text-white hover:text-accent-secondary transition-colors" %>
      <% UiConfig::SOCIAL_LINKS.each do |social| %>
        <a class="text-white hover:text-accent-secondary transition-colors" href="<%= social[:url] %>" target="_blank" rel="noopener noreferrer">[ <%= social[:name].downcase %> ]</a>
      <% end %>
    </div>
  </div>
</footer>
